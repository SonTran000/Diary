<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/fb_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/firebase_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FireBaseLogin"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fb_img"
        android:id="@+id/fb_text"/>
    
    <ProgressBar
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb_text"
        android:id="@+id/progress_circular"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Google account"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roung_bg"
        android:id="@+id/login_button"
        android:drawableStart="@drawable/google_logo"/>
    <Button
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roung_bg"
        android:id="@+id/logout_button"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roung_bg"
        android:text="Login"
        android:id="@+id/open_loginBox"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roung_bg"
        android:id="@+id/open_registerBox"
        android:text="Register"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/open_loginBox"/>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:id="@+id/login_container"
        android:background="@drawable/roung_bg"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/login_layout">

            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/roung_bg"
                android:id="@+id/in_email"
                android:hint="Email"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/in_email"
                android:background="@drawable/roung_bg"
                android:id="@+id/in_password"
                android:hint="Password"
                android:inputType="textPassword"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roung_bg"
                android:backgroundTint="#65DD4E"
                android:layout_below="@id/in_password"
                android:layout_marginTop="20dp"
                android:id="@+id/in_login"
                android:text="Login"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roung_bg"
                android:backgroundTint="#65DD4E"
                android:layout_below="@id/in_password"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/in_login"
                android:layout_marginLeft="100dp"
                android:id="@+id/in_cancel"
                android:text="Cancel"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/create_layout"
            >
            <EditText
                android:layout_below="@+id/create_username"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/roung_bg"
                android:id="@+id/create_email"
                android:hint="Email"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/roung_bg"
                android:id="@+id/create_username"
                android:hint="Username"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/create_email"
                android:background="@drawable/roung_bg"
                android:id="@+id/create_password"
                android:hint="Password"
                android:inputType="textPassword"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/create_email"
                android:background="@drawable/roung_bg"
                android:id="@+id/create_REpassword"
                android:hint="Input Password again"
                android:inputType="textPassword"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roung_bg"
                android:backgroundTint="#65DD4E"
                android:layout_below="@id/create_REpassword"
                android:layout_marginTop="20dp"
                android:id="@+id/create_login"
                android:text="Register"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roung_bg"
                android:backgroundTint="#65DD4E"
                android:layout_below="@id/create_REpassword"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/create_login"
                android:layout_marginLeft="100dp"
                android:id="@+id/create_cancel"
                android:text="Cancel"/>

        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>